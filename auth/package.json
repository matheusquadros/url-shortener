{
  "name": "node-ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node -r module-alias/register dist/index.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "ts-node-dev -r tsconfig-paths/register ./src/index.ts",
    "test": "cross-env LOG_DISABLED=true NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watchAll tests/unit",
    "test:e2e": "npm test -- --watchAll tests/e2e",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "express": "^4.17.3",
    "module-alias": "^2.2.2"
  },
  "engines": {
    "node": "17"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
